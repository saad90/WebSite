@model WS01.Models.LinksInterventions

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>LinksInterventions</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FkInterventionsTypes" class="control-label"></label>
                <select asp-for="FkInterventionsTypes" class="form-control" asp-items="ViewBag.FkInterventionsTypes">
                    <option selected>Veuillez Sélectionner une intervention</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="FkAspNetUsers" class="control-label"></label>
                <select asp-for="FkAspNetUsers" class ="form-control" asp-items="ViewBag.FkAspNetUsers" id="FkANU" readonly></select>
            </div>
            <div class="form-group">
                <label asp-for="FkIxAntenne" class="control-label"></label>
                <select asp-for="FkIxAntenne" class="form-control" asp-items="ViewBag.FkIxAntenne">
                    <option selected>Veuillez Sélectionner une agence</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="FkMaterielsStatuts" class="control-label"></label>
                <select asp-for="FkMaterielsStatuts" class ="form-control" asp-items="ViewBag.FkMaterielsStatuts" id="stat" readonly></select>
            </div>
            <div class="form-group">
                <label asp-for="DateDebut" class="control-label"></label>
                <input asp-for="DateDebut" class="form-control" value="@ViewBag.dat" readonly/>
                <span asp-validation-for="DateDebut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateFin" class="control-label"></label>
                <input asp-for="DateFin" class="form-control" readonly/>
                <span asp-validation-for="DateFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Commentaire" class="control-label"></label>
                <input asp-for="Commentaire" class="form-control" />
                <span asp-validation-for="Commentaire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
    var number = "@ViewBag.idd";
    $("#FkANU").val(number);
    $("#stat").val(1);
</script>
}
