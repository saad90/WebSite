@model WS01.Models.LinksMaterielsIxMaterielStatuts

@{
    ViewData["Title"] = "Create";
}
    <style>
    body {
        background-repeat: no-repeat;
        background-image: url("/images/link_materiel.jpeg");
        background-position: center;
        background-attachment: fixed;
        background-size: contain;
    }
    </style>
    <div class="row col-md-12">
        <div class="col-md-4">
        </div>
            <div class="card text-center col-md-4">
                
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="FkMateriels" class="control-label"></label>
                            <select asp-for="FkMateriels" class="form-control" id="mat" asp-items="ViewBag.FkMateriels">
                                <option selected>Veuillez Sélectionner un matériel</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="FkMaterielsStatuts" class="control-label"></label>
                            <select asp-for="FkMaterielsStatuts" class="form-control" asp-items="ViewBag.FkMaterielsStatuts" id="stat" readonly>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="FkIxAntenne" class="control-label"></label>
                            <select asp-for="FkIxAntenne" class="form-control" asp-items="ViewBag.FkIxAntenne">
                                <option selected>Veuillez Sélectionner une Agence</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="FkAspNetUsers" class="control-label"></label>
                            <select asp-for="FkAspNetUsers" class="form-control" asp-items="ViewBag.FkAspNetUsers" id="FkANU" readonly>
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateDebut" class="control-label"></label>
                            <input asp-for="DateDebut" class="form-control" value="@ViewBag.dat" readonly />
                            <span asp-validation-for="DateDebut" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="DateFin" class="control-label"></label>
                            <input asp-for="DateFin" class="form-control" readonly />
                            <span asp-validation-for="DateFin" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Commentaire" class="control-label"></label>
                            <input asp-for="Commentaire" class="form-control" />
                            <span asp-validation-for="Commentaire" class="text-danger"></span>
                        </div>

                    </form>
                </div>
                    <div class="form-group">
                        <input type="submit" value="Créer" class="btn btn-primary" />
                    </div>
            </div>
            <div class="col-md-4">
            </div>


        </div>

        <div>
            <a asp-action="Index">Retour à la page Demande</a>
        </div>

        @section Scripts {
            @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
            <script>
    var number = "@ViewBag.idd";
    $("#FkANU").val(number);
    $("#stat").val(1);
            </script>
        }
